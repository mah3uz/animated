<p id="notice"><%= notice %></p>
<%= image_tag @gif.image_url %>

<p>Uploaded by:  <%= @gif.user.name %></p>
<p>
  <%= linked_tag_list @gif %>
</p>

<% if user_signed_in? && current_user.id == @gif.user_id %>
  <p>
      <%= link_to 'Edit', edit_gif_path(@gif) %> |
      <%= link_to 'Destroy', @gif, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>
