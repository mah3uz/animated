<h1>Articles</h1>
<p><%= Article.public_count %> articles and counting!</p>
<hr>
<%= link_to "New Article", new_article_path %>

<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>